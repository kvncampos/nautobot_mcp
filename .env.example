# Nautobot MCP Server Configuration
# Copy this file to .env and update the values as needed

# Environment Configuration - Change this ONE setting to switch environments
# Available options: "local", "nonprod", "prod"
NAUTOBOT_ENV=local

# Environment-specific credentials (only needed if overriding creds_helper defaults)
# For LOCAL environment:
# NAUTOBOT_LOCAL_TOKEN=your_local_token_here

# For NONPROD environment:
# NAUTOBOT_NONPROD_BASE_URL=https://your-nonprod-nautobot.com/
# NAUTOBOT_NONPROD_TOKEN=your_nonprod_token_here

# For PROD environment:
# NAUTOBOT_PROD_BASE_URL=https://your-prod-nautobot.com/
# NAUTOBOT_PROD_TOKEN=your_prod_token_here

# Server Configuration
API_PREFIX=nautobot_openapi
SERVER_NAME=any_openapi
SERVER_VERSION=0.2.0
NAUTOBOT_TOKEN=""
GITHUB_TOKEN=""

SSL_VERIFY=False

# Logging
LOG_LEVEL=INFO

# ChromaDB Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
DEFAULT_SEARCH_RESULTS=5

# External Services
POSTHOG_API_KEY=disable

# Request Configuration
API_TIMEOUT=10
